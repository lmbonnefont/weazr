<% @skip_footer = true %>

<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3 form-sign">
      <h2 class= "text-center cta-header-no-size">Edit your profile</h2>

        <%= simple_form_for @user, url: profile_path, method: :patch  do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%#= f.hidden_field :path, :value => @path  %>
           <%= f.input :email %>
           <%= f.input :first_name %>
           <%= f.input :last_name %>
           <%= f.input :phone_number %>
           <%= f.input :photo %>
           <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Edit profile", :class => 'btn-white btn-colored' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
