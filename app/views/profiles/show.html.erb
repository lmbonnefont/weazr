<% @skip_footer = true %>

<div class="container">

      <div class="profil text-center">
        <div class="main-bis">
          <div class="main-content">

            <% if @user.photo.file.nil?%>
               <%= cl_image_tag("tneymtpekih2wlj1dwdd.jpg", class: "avatar", width: 150, height: 150, crop: :thumb, gravity: :face) %>
            <% else %>
               <%= cl_image_tag @user.photo, width: 100, height: 100, crop: :thumb, gravity: :face, class: "avatar" %>
            <% end %>
            <h2><i class="fa fa-user" aria-hidden="true" style="color:#55A1F4"></i>
               <%= @user.first_name %></<h2></h2>
            <p><i class="fa fa-envelope-o" aria-hidden="true" style="color:#55A1F4"></i> <%= @user.email %></p>
            <p><i class="fa fa-phone" aria-hidden="true" style="color:#55A1F4"></i>
               <%= @user.phone_number %></p>
            <%= link_to 'Update my profile', edit_profile_path, class: "btn draw-border-red"   %>
            <br>


            <br>
            <p>
              <% if @input.nil? %>
                  <% if @company.nil? %>
                    <p></p>
                  <% else %>
                    <p><%= link_to 'Add inputs', new_company_input_path(@company) %></p>
                  <% end %>
              <% else %>
                 <p><%= link_to 'Update my inputs', edit_company_input_path(@company, @input), class: "btn " %></p>
              <% end %>
            </p>


          </div>
        </div>

        <div class="stat-bis">
          <div class="stat-content">
            <h3>1000 $</h3>

            <p>Week budget</p>

          </div>
        </div>
        <div class="stat-bis">
          <div class="stat-content">
            <h3><%= link_to campaigns_path(@company) do %><i class="fa fa-lg fa-globe" aria-hidden="true" style="color:#55A1F4"></i>
              <% end %>
            </h3>
            <p>All campaigns</p>
          </div>
        </div>
        <div class="stat-bis">
          <div class="stat-content">
            <h3 class="text-center ">

                <i class="fa fa-lg fa-calendar" aria-hidden="true" style="color: #55A1F4; margin: 20px"></i>


              </h3>
            <p>Last Calendar</p>

          </div>
        </div>
        <div class="description-bis">
          <div class="description-content">
            <% if @company.nil? %>
              <h3 class="text-center"> <%= link_to new_company_path(@user) do %><i class="fa fa-plus fa-2x" aria-hidden="true" style="color: #55A1F4"></i>
                <% end %>
              </h3>
              <p>Add a company</p>
            <% else %>
              <h2>
                <% if  @company.photo.file.nil? %>
                    <%= cl_image_tag("qhvyfzlzwg9mbi8i1det.jpg", :class => 'avatar ',
                  width: 45, height: 45, crop: :fill) %>
                <% else %>
                    <%= cl_image_tag @company.photo, height: 45, width: 45, crop: :fill,:class => 'avatar ' %>
                <% end %>
                    <%= @company.name %>
                    </h2>
                    <p class="text-center"><i class="fa fa-map-marker" aria-hidden="true" style="color:#55A1F4"></i>
                       <%= @company.address %></p>
                    <p class="text-center"><i class="fa fa-briefcase" aria-hidden="true" style="color:#55A1F4"></i>
                       <%= @company.economic_sector.name %></p>

                    <p><%= link_to 'Update my company', edit_company_path(@user), class: "btn "  %></p>
             <% end %>

          </div>
        </div>
        <div class="stat2">
          <div class="stat-content ">
            <h3 class="text-center"> <%= link_to new_campaign_path() do %><i class="fa fa-plus fa-2x" aria-hidden="true" style="color: #55A1F4"></i>
            <% end %>
            </h3>
            <p>New campaign</p>
          </div>
        </div>
      </div>
    </div>


</div>
