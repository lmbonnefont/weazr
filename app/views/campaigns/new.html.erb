

<% @skip_footer = true %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 form-sign">
      <h2 class= "text-center">Create your campaign !</h2>

      <%= simple_form_for @campaign do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, label: "Description" %>
          <%= f.input :start %>
          <%= f.input :end %>
          <%= f.input :budget_total, as: :string, label: "Weekly budget" %>
          <%= f.input :post_title %>
          <%= f.input :post_msg, label: "Post content" %>
          <%= f.input :photo, label: "Add a picture" %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :display, as: :boolean, label: false, inline_label: "Also display on my Facebook page" %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "create campaign", :class => 'btn-white btn-colored' %>

        </div>
      <% end %>
     </div>
  </div>
</div>


