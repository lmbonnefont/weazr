<% @skip_footer = true %>

    <div class="container">
      <div class="text-center" style="margin-top:50px">

        <%= link_to profile_path() do %>
          <i class="fa fa-cog fa-lg fa-fw" aria-hidden="true" style="color: #$blue; margin: 20px"></i>
        <% end %>
          |
          <%= link_to campaign_path(@campaign), method: :delete do %>
              <i class="fa fa-lg fa-trash-o"   aria-hidden="true" style="color: $blue; margin: 20px"></i>
              <% end %>
        <% if @campaign.end > Date.today %>
          |
          <%= link_to campaign_campaign_days_path(@campaign) do %>
          <i class="fa fa-lg fa-calendar" aria-hidden="true" style="color: $blue; margin: 20px"></i>
          <% end %>
        <% end %>


      </div>

      <div class="campaign-grid">
        <div class="titles  text-center">
          <h1 class="header-grid">
            <%= @campaign.title.upcase %>
          </h1>
        </div>

        <!-- <div class="template-fb  text-center">
        </div> -->
        <div class="template-fb ">
          <div class="fb-add-mini">
            <div class="logo-company-1-mini">
                <%= cl_image_tag @campaign.company.photo, :class => 'avatar ', width: 45, height: 45, crop: :fill %>
            </div>
            <h3 class="marque-mini text-left"><%= @campaign.company.name.capitalize %></h3>
            <p class="sponsor-mini text-left">Sponsored</p>


            <div class="title-mini text-left">
              <%= @campaign.title %>
            </div>
            <div class="pic-mini">
              <%= cl_image_tag @campaign.photo , height: 200, width: 400, crop: :fill %>
            </div>
            <div>
              <h2 class="title-un-pic1-mini text-left">
                <%= @campaign.post_title %>
              </h2>
              <p class="p-un-pic-mini text-left">
                <%= @campaign.post_msg %>
              </p>
              <p class="counts-mini text-left">
              200 Likes 25 Comments 109 Shares
              </p>
            </div>
            <div >
            </div>
          </div>
        </div>

        <div class="fb-stats text-center">
          <h1>Summary</h1>
          <br>
          <br>
          <p>Campaign id</p>

          <h3>#00<%= @campaign.id %></h3>


          <p>Total budget</p>
          <h3>€<%= @campaign.budget_total / 100 %>.<%= @campaign.budget_total % 100 %></h3>

          <p>Total spent</p>
          <h3>€<%= (@campaign.budget_total - @campaign.budget_remaining) / 100 %>.<%= (@campaign.budget_total - @campaign.budget_remaining) % 100 %></h3>

          <p>Start Date</p>
          <h3><%= @campaign.start %></h3>

          <p>End Date</p>
          <h3><%= @campaign.end %></h3>

        </div>

        <div class="chart-fb text-center">
          <h3 class="text-center"> <%= link_to new_campaign_path() do %><i class="fa fa-plus fa-2x" aria-hidden="true" style="color: #4BCFE1"></i>
          <% end %>
          </h3>
          <p>New campaign</p>
        </div>

        <div class="title-numbers text-center">
          <h1>METRICS</h1>
        </div>

        <div class="number1 text-center">
          <p>
            Cost per Click
          </p>
          <h3>
            <% if @campaign.cpc.nil? %>
              none
            <% else %>
              €<%= @campaign.cpc %>
            <% end %>
          </h3>
        </div>
        <div class="number2 text-center">
          <p>
            Post Engagements
          </p>
          <h3>
            <% if @campaign.post_engagements.nil? %>
              none
            <% else %>
              <%= @campaign.post_engagements %>
            <% end %>
          </h3>
        </div>
        <div class="number3 text-center">
          <p>
            Impressions
          </p>
          <h3>
            <% if @campaign.impressions.nil? %>
              none
            <% else %>
              <%= @campaign.impressions %>
            <% end %>
          </h3>
        </div>
        <div class="number4 text-center">
          <p>
            Button Clicks
          </p>
          <h3>
            <% if @campaign.btn_click.nil? %>
              none
            <% else %>
              <%= @campaign.btn_click %>
            <% end %>
          </h3>
        </div>

      </div>
    </div>
