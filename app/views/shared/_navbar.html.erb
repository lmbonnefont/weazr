<div class="navbar-wagon">
  <!-- Logo -->

  <div class="logo">
  <%= link_to image_tag("logo.png", id: "logo", width: 50), root_path %>
    <h4 class="happy cta-header">Weazr</h4>
  </div>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm color-tex">


    <% if user_signed_in? %>
        <%= link_to "Sell new product", new_product_path, class: "btn draw-border-red" %> |
        <div class="contenant-messages">
        <%= link_to user_messages_path(current_user) do %>
          <div class="nbmessage text-center"> <%= current_user.new_message %> </div>
          <i class="fa fa-envelope-o spacing" aria-hidden="true"></i>
        <% end %> |
        </div>

        <%= link_to "", basket_path(current_user.basket), class: "fa fa-shopping-basket " %> |
        <%=link_to cl_image_tag(current_user.profil_picture, :transformation=>[
        {:width=>400, :height=>400, :gravity=>"face", :radius=>"max", :crop=>"crop"},
        {:width=>200, :crop=>"scale"}
        ],  class: "avatar spacing"), user_path(current_user) %>
        <%= link_to "Checkout", destroy_user_session_path, method: :delete, class: "btn draw-border-red" %> |


    <% else %>
     <%= link_to "Log in", new_user_session_path, class: "btn draw-border" %>
     <%= link_to "Try", new_user_registration_path, class: "btn draw-border" %>
    <% end %>

  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Sell</a></li>
        <li><a href="#">Messages</a></li>
        <li><a href="#">Sign-in</a></li>
        <li><a href="#">Sign-up</a></li>
      </ul>
    </div>
  </div>
</div>
