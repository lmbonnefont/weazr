<% @skip_footer = true %>

<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3 form-sign">
     <div> <h2 class= "text-center cta-header-no-size-form">Log in</h2></div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", :class => 'btn-white btn-colored' %>
        </div>
      <% end %>

      <div class="text-center log"><%= render "devise/shared/links" %></div>

    </div>
  </div>
</div>
