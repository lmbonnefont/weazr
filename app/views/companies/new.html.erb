<% @skip_footer = true %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 form-sign">
      <h1>Add your company</h1>
        <%= simple_form_for @company do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :account_id %>
          <%= f.input :page_id %>
          <%= f.input :website_url %>
          <%= f.input :pixel_id %>
          <%= f.association  :economic_sector %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.button :submit %>
        <% end %>

    </div>
  </div>
</div>

