<% @skip_footer = true %>


<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3 form-sign">
      <h2 class= "text-center">Edit your company</h2>

        <%= simple_form_for @company do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%#= f.hidden_field :path, :value => @path  %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :account_id %>
          <%= f.input :page_id %>
          <%= f.input :website_url %>
          <%= f.input :pixel_id %>
          <%= f.association  :economic_sector %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Edit company", :class => 'btn-white btn-colored' %>
        </div>
      <% end %>



    </div>
  </div>
</div>
