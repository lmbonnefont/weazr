      <div class="stat-content">
        <h3>Days</h3>
        <br>
        <p>Is Weather Friendly?</p>
        <div class="contenant-budget">
          <p>Usual Spending</p>
          <p style="color: gray; font-weight: normal">Adjusted Spending</p>
        </div>
      </div>
    </div>
  </div>

  <div class="all-days">
    <% today = Date.today + 1%>
    <% day7 = today + 6 %>
    <% i = 0 %>
    <% (today..day7).each  do |day| %>

          <% if day >= @campaign.start && day <= @campaign.end %>
            <div class="w-day">
              <div class="stat-content">
                <h3><%= day.strftime("%e") %></h3>
                <p><%= day.strftime("%a") %></p>
                <% if @campaign_days.find_by_date(day).indice_daily >= (1/(@campaign.end-@campaign.start) * 1.2) %>
                  <div class="smiley">ðŸ˜ƒ</div>
                <% elsif @campaign_days.find_by_date(day).indice_daily < (1/(@campaign.end-@campaign.start) * 0.8)%>
                  <div class="smiley">ðŸ˜–</div>
                <% else %>
                  <div class="smiley">ðŸ˜Œ</div>
                <% end %>

                <div class="contenant-budget">

                  <p style="color: $blue; font-weight: normal">â‚¬<%= ((@campaign_days.find_by_date(day).indice_bau * @campaign.budget_total) / 100).round(1) %></p>
                  <p>â‚¬<%= (@campaign_days.find_by_date(day).budget_forcast / 100).round(1) %></p>
                </div>
              </div>
            </div>

          <% else %>
            <div class="w-day off">
              <div class="stat-content">
                <h3><%= day.strftime("%e") %></h3>
                <p><%= day.strftime("%a") %></p>
              </div>
            </div>
          <% end %>
        <% end %>
  </div>

    <div class="description">
        <div id="chart-container" data-days="<%= @days.to_json %>" data-series="<%= @series.to_json %>"></div>

    </div>
</div>
