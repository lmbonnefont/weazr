<% @skip_navbar = true %>
<% @skip_footer = true %>



<div class="profile text-center">
  <div class="menu text-center">
      <div tl-menu>
        <h3 class="text-center "> <%= link_to campaigns_path() do %><i class="fa fa-lg fa-globe" aria-hidden="true" style="color: white; margin: 20px"></i>
        <% end %>
        </h3>

        <h3 class="text-center " style="margin-bottom: 20px">
          <%= link_to new_campaign_path() do %>
          <i class="fa fa-lg fa-plus" aria-hidden="true" style="color: white; margin: 20px"></i>
          <% end %>
        </h3>
        <h3 class="text-center">
          <%= link_to profile_path() do %>
          <i class="fa fa-cog fa-spin fa-lg fa-fw" aria-hidden="true" style="color: white; margin: 20px"></i>
          <% end %>
        </h3>

      </div>
  </div>

  <div class="navbar-dashboard stat ">
    <div class="navbar-wagon-left" style="padding: 10px">
      <i class="fa fa-calendar" style="color: #60A1F4; font-weight: bold; margin-left: 10px; margin-right: 10px;" aria-hidden="true"></i> |
      <span style="color: #55A1F4; font-weight: bold" >
        <%= (Date.today+1).strftime('%a %d') %> - <%= (Date.today + 7).strftime('%a %d')  %>
      </span>
    </div>
    <div class="campaign-budget" style="font-weight: bold">
      <i style="font-weight: bold; margin: 8px" class="fa fa-money" aria-hidden="true"> </i> =>
      <%= @campaign.budget_total %>â‚¬
    </div>

    <div class="campaign-title">Campaign name : <%= link_to @campaign.title, campaign_path(@campaign) %></div>
  </div>

  <% today = Date.today + 1%>
  <% day7 = today + 6 %>
  <% i = 0 %>
    <% (today..day7).each  do |day| %>
      <% if day >= @campaign.start && day <= @campaign.end %>

        <div class="stat #{i+1} stat">
          <div class="stat-content">

      <p><%= @campaign_days.find_by_date(day).indice_daily.round(3) %></p>

            <h3><%= day.strftime("%e") %></h3>
            <p><%= day.strftime("%a") %></p>
            <% indice_weather = @campaign_days.find_by_date(day).indice_rain * 0.6 + @campaign_days.find_by_date(day).indice_temperature * 0.2 + @campaign_days.find_by_date(day).indice_damp * 0.2 %>
            <% if @campaign_days.find_by_date(day).indice_daily >= (1/(@campaign.end-@campaign.start) * 1.2) %>
              <div class="smiley">ðŸ˜ƒ</div>
            <% elsif @campaign_days.find_by_date(day).indice_daily < (1/(@campaign.end-@campaign.start) * 0.8)%>
              <div class="smiley">ðŸ˜–</div>
            <% else %>
              <div class="smiley">ðŸ˜Œ</div>
            <% end %>

            <div class="contenant-budget">

              <p><%= @campaign_days.find_by_date(day).budget_forcast.truncate %>â‚¬</p>

              <p style="color: gray; font-weight: normal"><%= (@campaign_days.find_by_date(day).indice_bau * @campaign.budget_total).round(2) %>â‚¬</p>

            </div>
          </div>
        </div>

      <% else %>
        <div class="stat #{i+1} stat off">
          <div class="stat-content">
            <h3><%= day.strftime("%e") %></h3>
            <p><%= day.strftime("%a") %></p>

          </div>
        </div>
      <% end %>
    <% end %>
    <div class="description">
        <div id="chart-container" data-days="<%= @days.to_json %>" data-series="<%= @series.to_json %>"></div>

    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">

    </div>
  </div>
</div>
